<Window x:Class="WpfApp1.AddUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Добавление пользователя" MinHeight="400" MinWidth="400" SizeToContent="WidthAndHeight">
    
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FFDA89" Offset="0.0"></GradientStop>
            <GradientStop Color="#FFE3CB" Offset="1.0"></GradientStop>
        </LinearGradientBrush>
    </Window.Background>

    <Grid Margin="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Добавление пользователя"
                   FontFamily="Bahnschrift"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="#333"
                   HorizontalAlignment="Center"
                   Margin="0,10"/>

        <StackPanel Grid.Row="1" Width="300" VerticalAlignment="Center" HorizontalAlignment="Center">

            <TextBlock Text="Фамилия" FontSize="14" FontWeight="Bold" Foreground="#444"/>

            <TextBox x:Name="txtLastName"
                         Margin="0,5,0,10"
                         Height="35"
                         Background="#BFAA98"
                         BorderBrush="#CCC"
                         BorderThickness="1"/>

            <TextBlock Text="Имя" FontSize="14" FontWeight="Bold" Foreground="#444" />

            <TextBox x:Name="txtFirstName"
             Margin="0,5,0,10"
             Height="35"
             Background="#BFAA98"
             BorderBrush="#CCC"
             BorderThickness="1"/>

            <TextBlock Text="Никнейм" FontSize="14" FontWeight="Bold" Foreground="#444" />

            <TextBox x:Name="txtUserName"
                 Margin="0,5,0,10"
                 Height="35"
                 Background="#BFAA98"
                 BorderBrush="#CCC"
                 BorderThickness="1"/>

            <TextBlock Text="Роль" FontSize="14" FontWeight="Bold" Foreground="#444" />

            <TextBox x:Name="txtRole"
                         Margin="0,5,0,10"
                         Height="35"
                         Background="#BFAA98"
                         BorderBrush="#CCC"
                         BorderThickness="1"/>

            <TextBlock Text="Email" FontSize="14" FontWeight="Bold" Foreground="#444" />

            <TextBox x:Name="txtEmail"
                         Margin="0,5,0,10"
                         Height="35"
                         Background="#BFAA98"
                         BorderBrush="#CCC"
                         BorderThickness="1"/>

            <TextBlock Text="Номер телефона" FontSize="14" FontWeight="Bold" Foreground="#444" />

            <TextBox x:Name="txtPhoneNumber"
                     Margin="0,5,0,10"
                     Height="35"
                     Background="#BFAA98"
                     BorderBrush="#CCC"
                     BorderThickness="1"/>

            <TextBlock Text="Пароль" FontSize="14" FontWeight="Bold" Foreground="#444" />

            <PasswordBox x:Name="txtPassword"
                         Margin="0,5,0,10"
                         Height="35"
                         Background="#BFAA98"
                         BorderBrush="#CCC"
                         BorderThickness="1"/>

            <Button Content="Добавить"
                    Width="120"
                    Height="40"
                    Margin="0,10,0,0"
                    Background="#BFAA98"
                    Foreground="#444"
                    BorderThickness="0"
                    FontWeight="Bold"
                    Cursor="Hand" Click="Button_Add_User_Click"/>

        </StackPanel>

    </Grid>
    
</Window>
