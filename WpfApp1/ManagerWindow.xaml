<Window x:Class="WpfApp1.ManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="BookingsWindow" Height="450" Width="800">
    
    <Grid Margin="20">

        <TabControl>
            <TabItem Header="Гости">
                <Frame Name="GuestFrame" NavigationUIVisibility="Hidden"/>
            </TabItem>

            <TabItem Header="Бронирование">
                <Frame Name="BookingFrame" NavigationUIVisibility="Hidden"/>
            </TabItem>

            <TabItem Header="Номерной фонд">
                <Frame Name="RoomFrame" NavigationUIVisibility="Hidden"/>
            </TabItem>

            <TabItem Header="Клининг">
                <Frame Name="CleaningFrame" NavigationUIVisibility="Hidden"/>
            </TabItem>

        </TabControl>

    </Grid>
    
</Window>
